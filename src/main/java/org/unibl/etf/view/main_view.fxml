<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.unibl.etf.controller.MainController" spacing="10" padding="10">

    <HBox spacing="10">
        <Label text="Početni grad:"/>
        <ComboBox fx:id="startCityCombo"/>
        <Label text="Odredišni grad:"/>
        <ComboBox fx:id="endCityCombo"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Kriterijum:"/>
        <ComboBox fx:id="criteriaCombo">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Najkraće vrijeme"/>
                    <String fx:value="Najniža cijena"/>
                    <String fx:value="Najmanje presjedanja"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="Pronađi rutu" onAction="#onFindRoute"/>
    </HBox>

    <TableView fx:id="routeTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="fromCol" text="Od"/>
            <TableColumn fx:id="toCol" text="Do"/>
            <TableColumn fx:id="typeCol" text="Prevoz"/>
            <TableColumn fx:id="depTimeCol" text="Polazak"/>
            <TableColumn fx:id="durationCol" text="Trajanje (min)"/>
            <TableColumn fx:id="priceCol" text="Cijena"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="moreRoutesBtn" text="Prikaz dodatnih ruta" onAction="#onShowMoreRoutes"/>
        <Button fx:id="buyTicketBtn" text="Kupovina karte" onAction="#onBuyTicket"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Ukupno prodatih karata:"/>
        <Label fx:id="soldLabel" text="0"/>
        <Label text="Ukupan prihod:"/>
        <Label fx:id="revenueLabel" text="0.00 KM"/>
    </HBox>
</VBox>
